<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/my_item_height">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_addgroup_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_title_text_size"
            android:text="小组"
            android:textColor="@color/colorTextBlack"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/item_addgroup_number_tv"
            android:layout_below="@id/item_addgroup_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_title_text_size"
            android:text="2/2"
            android:drawableLeft="@mipmap/ic_launcher"
            android:textColor="@color/colorBlueBackground"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <View
        style="@style/VerticalLine"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_addgroup_rv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        ></android.support.v7.widget.RecyclerView>
    <ImageView
        android:id="@+id/item_addgroup_addone_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        />


</LinearLayout>