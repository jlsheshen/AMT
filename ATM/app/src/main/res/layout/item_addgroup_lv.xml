<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/my_item_height"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >

        <TextView
            android:id="@+id/item_addgroup_title_tv"
            style="@style/item_title_white_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/ellipse_blue_bg"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:lines="1"
            android:text="小组" />

        <TextView
            android:id="@+id/item_addgroup_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/item_addgroup_title_tv"
            android:layout_marginTop="5dp"

            android:layout_centerHorizontal="true"
            android:drawableLeft="@mipmap/publisher"
            android:lines="1"
            android:text="2/2"
            style="@style/item_gray_text" />
    </RelativeLayout>

    <View style="@style/VerticalLine" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_addgroup_rv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"></android.support.v7.widget.RecyclerView>


</LinearLayout>