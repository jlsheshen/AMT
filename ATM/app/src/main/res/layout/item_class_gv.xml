<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/FragmentPadding"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginTop="30dp"
    android:orientation="vertical"
    android:paddingTop="30dp">

    <ImageView
        android:id="@+id/item_class_bg_iv"
        android:layout_width="240dp"
        android:layout_height="135dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:background="@mipmap/card_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_class_name_iv"
            style="@style/content_black_text"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@mipmap/icon_kckm_n"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxWidth="170dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="2dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView

            android:id="@+id/item_class_author_tv"
            style="@style/content_gray_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:lines="1"
            android:maxWidth="75dp"
            android:paddingRight="10dp" />
    </LinearLayout>

</LinearLayout>