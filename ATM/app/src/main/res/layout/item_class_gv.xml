<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    style="@style/FragmentPadding"
    android:layout_marginTop="30dp"
    android:paddingTop="30dp"


     >

    <ImageView
        android:id="@+id/item_class_bg_iv"
        android:layout_width="240dp"
        android:layout_height="135dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:background="@mipmap/card_background"
        >

        <TextView
            android:id="@+id/item_class_name_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:paddingLeft="10dp"
            style="@style/item_title_black_text"

            />

        <TextView
            android:id="@+id/item_class_author_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/item_gray_text"
            android:paddingLeft="10dp"

            />
    </LinearLayout>

</LinearLayout>