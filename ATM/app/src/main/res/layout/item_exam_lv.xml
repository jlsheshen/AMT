<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    style="@style/FragmentPadding"
    >

    <ImageView
        android:id="@+id/item_exam_head_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:src="@mipmap/touxiangexam" />

    <LinearLayout
        android:id="@+id/item_exam_above_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_exam_head_iv"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/item_exam_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/item_title_text_size"

            />

        <TextView
            android:id="@+id/item_exam_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/item_title_text_size"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_exam_below_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_exam_above_ly"
        android:layout_toRightOf="@id/item_exam_head_iv"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"

        >

        <TextView
            android:id="@+id/item_exam_publisher_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/item_text_size"
            android:drawableLeft="@mipmap/icon_mingzi_n"
            />
        <View
            style="@style/VerticalLine"/>

        <TextView
            android:id="@+id/item_exam_itemumber_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/item_text_size"
            android:drawableLeft="@mipmap/icon_shitishu_n"
            />
        <View
            style="@style/VerticalLine"/>

        <TextView
            android:id="@+id/item_exam_starttime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/item_text_size"
            android:drawableLeft="@mipmap/icon_min_n"
            />
        <View
            android:id="@+id/item_exam_line_v"
            style="@style/VerticalLine"/>

        <TextView
            android:id="@+id/item_exam_duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/item_text_size"
            android:drawableLeft="@mipmap/icon_time_n"
            />
    </LinearLayout>

    <ImageView

        android:id="@+id/item_exam_type_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/selector_exam_download_type"
        android:layout_centerVertical="true"
        />
    <ProgressBar
        android:id="@+id/item_exam_type_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />

</RelativeLayout>