<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/item_task_submit_name_tv"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/middle_interval"
        android:text="@string/class_name"
        android:lines="1"
        style="@style/content_blue_text" />

    <TextView
        android:id="@+id/item_task_submit_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/middle_interval"
        android:ems="12"
        android:text="@string/class_name"
        style="@style/content_gray_text"/>

</RelativeLayout>
