<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="75dp"
    android:background="@color/colorWhite"
    android:orientation="horizontal">

    <LinearLayout
        style="@style/LeftDrawlayoutStyle"
        android:background="@color/colorBlueBar"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:background="@color/colorBlueBackground"
            android:visibility="gone"
            >

            <com.edu.accountingteachingmaterial.view.CircleImageView
                android:id="@+id/my_head_civ"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:src="@mipmap/touxiang_me"
                app:civ_border_overlay="false"
                app:civ_border_width="0dp" />

            <TextView
                android:id="@+id/my_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_head_civ"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="@string/login"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/content_text_size" />

            <TextView
                android:id="@+id/my_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_name_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="学号"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/item_text_size" />
        </RelativeLayout>

        <RadioGroup

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/my_download_rb"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/selector_my_error"
                android:button="@null"
                android:drawableLeft="@mipmap/icon_wodecuoti_n"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:text="@string/my_downloads"
                android:textColor="@color/colorBlueBackground"
                android:textSize="@dimen/item_title_text_size"
                android:textStyle="bold"
                android:visibility="gone"
                />

            <View style="@style/HorizontalLine" />

            <RadioButton
                android:id="@+id/my_error_rb"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/selector_my_error"
                android:button="@null"
                android:drawableLeft="@mipmap/icon_wodecuoti_n"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:text="@string/my_errors"
                android:textColor="@color/colorBlueBackground"
                android:textSize="@dimen/item_title_text_size"
                android:textStyle="bold"

                />

            <View style="@style/HorizontalLine" />
        </RadioGroup>

        <View
            style="@style/HorizontalLine"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

    </LinearLayout>

