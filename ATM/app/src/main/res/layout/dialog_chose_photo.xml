<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350px" android:layout_height="wrap_content"
    android:paddingLeft="30px"
    android:paddingRight="30px"
    android:paddingTop="70px"
    android:paddingBottom="16px"
    android:orientation="vertical"
    android:background="@mipmap/dialog_default_bg"
    >
    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="选择图片"
        style="@style/item_title_blue_text"
        android:textStyle="bold" />

    <Button
        android:id="@+id/select_photograph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        style="@style/item_title_black_text"
        android:text="拍照"
        />
    <Button
        android:id="@+id/select_in_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        style="@style/item_title_black_text"
        android:text="从手机相册选择"
        />




</LinearLayout>