<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    style="@style/FragmentPadding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="100px"
    tools:ignore="ResAuto">

    <LinearLayout
        android:id="@+id/ly_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置测验难度"
            android:textColor="@color/colorWhite"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/cb_easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/bg_selector_checkbox"
            android:drawablePadding="10px"
            android:text="容易"
            android:textColor="@color/colorWhite"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/cb_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/bg_selector_checkbox"
            android:drawablePadding="10px"
            android:text="普通"
            android:textColor="@color/colorWhite"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/cb_hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/bg_selector_checkbox"
            android:drawablePadding="10px"
            android:text="困难"
            android:textColor="@color/colorWhite"
            android:textSize="24sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:layout_above="@+id/btn_start"
        android:layout_below="@+id/ly_top"
        android:layout_marginBottom="20px"
        android:layout_marginTop="20px"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置测验题型"
            android:textColor="@color/colorWhite"
            android:textSize="24sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="50px"
            android:layout_marginLeft="-45px"
            android:src="@mipmap/img_xxb" />

        <LinearLayout
            android:id="@+id/ly_first"
            android:layout_width="300px"
            android:layout_height="250px"
            android:layout_marginLeft="-25px"
            android:background="@drawable/shape_chapter_list"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/ly_second"
            android:layout_width="300px"
            android:layout_height="250px"
            android:layout_marginLeft="40px"
            android:background="@drawable/shape_chapter_list"
            android:orientation="vertical" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40px"
        android:background="@drawable/bg_selector_ct" />
</RelativeLayout>
