<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="TranslucentBg" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SizeBarStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">76dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="SizeBarButtonStyle">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>



    </style>

    <style name="TitleBarStyle">
        <item name="android:layout_height">@dimen/title_layout_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="LeftDrawlayoutStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">300dp</item>
    </style>


    <!--横线样式-->
    <style name="HorizontalLine">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorBlueContent</item>
    </style>
    <!--竖线样式-->
    <style name="VerticalLine">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:background">@color/colorBlueContent</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="SettingItem">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <!---->
    <style name="ExpandableLvStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:groupIndicator">@null</item>
        <item name="android:divider">@color/colorBlueContent</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:layout_margin">@dimen/little_interval</item>
        <item name="android:childDivider">@color/colorBlueContent</item>
    </style>
    <!--fragment的padding-->
    <style name="FragmentPadding">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="ItemPadding">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <!-- 选项多项按钮样式 -->
    <style name="cb_option_style">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@drawable/rb_selector_subject_text_color</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/txt_size_half_medium</item>
        <item name="android:focusable">true</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingLeft">25dp</item>
    </style>

    <!-- ppw的item样式 -->
    <style name="ppw_title_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/colorBlueBackground</item>
        <item name="android:textSize">@dimen/item_title_text_size</item>
        <item name="android:background">#8823c8be</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>
    <!--最大号字-->
    <style name="title_text">
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>
    <!--白色标题字-->
    <style name="title_white_text" parent="title_text">
        <item name="android:textColor">@color/white</item>
    </style>
    <!--中大号字-->
    <style name="item_title_text">
        <item name="android:textSize">@dimen/item_title_text_size</item>
    </style>
    <!--中大号蓝色字-->
    <style name="item_title_blue_text" parent="item_title_text">
        <item name="android:textColor">@color/colorBlueBackground</item>
    </style>
    <!--中大号黑色字-->
    <style name="item_title_black_text" parent="item_title_text">
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>
    <!--中大号灰色字-->
    <style name="item_title_gray_text" parent="item_title_text">
        <item name="android:textColor">@color/colorGray</item>
    </style>
    <!--中大号白色字-->
    <style name="item_title_white_text" parent="item_title_text">
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <!--小号字-->
    <style name="item_text">
        <item name="android:textSize">@dimen/item_text_size</item>
    </style>
    <!--小号字灰色字-->
    <style name="item_gray_text" parent="item_text">
        <item name="android:textColor">@color/colorGray</item>
    </style>
    <!--小号号白色字-->
    <style name="item_white_text" parent="item_text">
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <!--普通字-->
    <style name="content_text">
        <item name="android:textSize">@dimen/content_text_size</item>
    </style>
    <!--蓝色普通字-->
    <style name="content_blue_text" parent="content_text">
        <item name="android:textColor">@color/colorBlueBackground</item>
    </style>
    <style name="content_gray_text" parent="content_text">
        <item name="android:textColor">@color/colorLightGray</item>
    </style>

    <!--下拉刷新动画-->
    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
</resources>
